<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMaVoucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEWUSER20"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvTenVoucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giảm 20% cho khách hàng mới"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTrangThai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoạt động"
                android:padding="6dp"
                android:textColor="#FFFFFF"
                android:background="#4CAF50"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Thông tin -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:background="#F5F5F5"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvGiaTriGiam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giảm 20% (max 200,000 ₫)"
                android:textStyle="bold"
                android:textColor="#E91E63"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDieuKien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn tối thiểu: 500,000 ₫"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvSoLuong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đã dùng: 5/100"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvNgayHetHan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HSD: 31/12/2025"
                    android:textSize="12sp"
                    android:textColor="#FF5722" />
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Sửa"
                android:textSize="12sp"
                android:backgroundTint="#2196F3"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnToggle"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Tắt"
                android:textSize="12sp"
                android:backgroundTint="#FF9800"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Xóa"
                android:textSize="12sp"
                android:backgroundTint="#F44336" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

