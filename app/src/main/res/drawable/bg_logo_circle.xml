<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- soft offset shadow (subtle) -->
    <item android:left="3dp" android:top="3dp">
        <shape android:shape="oval">
            <size android:width="80dp" android:height="80dp"/>
            <solid android:color="#22000000"/>
        </shape>
    </item>

    <!-- main radial gradient circle with thin translucent stroke -->
    <item>
        <shape android:shape="oval">
            <size android:width="80dp" android:height="80dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="60dp"
                android:centerX="0.3"
                android:centerY="0.25"
                android:startColor="#8A4C9BFF"
                android:centerColor="#5C7CFF"
                android:endColor="#4A6AF7" />
            <stroke android:width="1dp" android:color="#40FFFFFF"/>
        </shape>
    </item>

    <!-- glossy highlight top-left -->
    <item android:left="10dp" android:top="8dp" android:right="36dp" android:bottom="36dp">
        <shape android:shape="oval">
            <size android:width="48dp" android:height="48dp"/>
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#66FFFFFF"
                android:endColor="#00FFFFFF"/>
        </shape>
    </item>

</layer-list>
